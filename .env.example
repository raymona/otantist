# ===========================================
# Otantist Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ===========================================
# Database (PostgreSQL)
# ===========================================
POSTGRES_USER=otantist
POSTGRES_PASSWORD=otantist_dev
POSTGRES_DB=otantist_dev
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ===========================================
# Redis
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}

# ===========================================
# JWT Authentication
# ===========================================
# Generate with: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# Email (Development - Mailhog)
# ===========================================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM_NAME=Otantist
EMAIL_FROM=noreply@otantist.local

# ===========================================
# Email (Production - Resend SMTP relay)
# ===========================================
# Uncomment and fill in for production deployment
# Resend supports two port options:
#   Port 587 + SMTP_SECURE=false  (STARTTLS â€” recommended, most compatible)
#   Port 465 + SMTP_SECURE=true   (implicit TLS)
# SMTP_HOST=smtp.resend.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=resend
# SMTP_PASS=re_your_resend_api_key_here
# EMAIL_FROM=onboarding@resend.dev

# ===========================================
# Feedback Email
# ===========================================
# Address that receives in-app tester feedback submissions
FEEDBACK_EMAIL=info@otantist.com

# ===========================================
# AI / Anthropic API
# ===========================================
ANTHROPIC_API_KEY=your-anthropic-api-key

# ===========================================
# File Storage (Cloudflare R2 or S3)
# ===========================================
# Leave empty for local file storage in development
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=otantist-dev
R2_PUBLIC_URL=

# ===========================================
# Push Notifications (Firebase)
# ===========================================
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# ===========================================
# Application URLs
# ===========================================
API_URL=http://localhost:3001
WEB_URL=http://localhost:3000
MOBILE_SCHEME=otantist

# ===========================================
# CORS (optional)
# ===========================================
# Comma-separated list of additional allowed origins beyond WEB_URL.
# Vercel preview URLs (*.vercel.app) are always allowed automatically.
# Example: CORS_ORIGINS=https://staging.otantist.com,https://admin.otantist.com
CORS_ORIGINS=

# ===========================================
# Environment
# ===========================================
NODE_ENV=development
LOG_LEVEL=debug

# ===========================================
# pgAdmin (optional)
# ===========================================
PGADMIN_EMAIL=admin@otantist.local
PGADMIN_PASSWORD=admin
