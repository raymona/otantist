{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && cd apps/api && npx prisma generate && cd ../.. && npm run build:api"
  },
  "deploy": {
    "startCommand": "npm run start:prod -w @otantist/api",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
